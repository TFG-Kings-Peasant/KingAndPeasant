{
  "name": "king_and_peasant",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:server":"npm run test --prefix packages/server",
    "test:client":"npm run test --prefix packages/client",
    "dev": "npm run docker:db && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run start --workspace=server",
    "docker": "docker-compose up --build",
    "docker:db": "docker-compose up -d mariadb redis",
    "start:all": "npm install && npm run dev"
  },
